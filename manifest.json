{
  "id": "micropress-sample-plugin",
  "name": "Sample Image Gallery",
  "version": "0.0.13",
  "description": "Add responsive image galleries with lightbox",
  "author": "MicroPress",
  "homepage": "https://github.com/your-org/plugin-gallery",
  "capabilities": {
    "editor": true,
    "backend": true,
    "renderer": true
  },
  "editorToolbar": [
    {
      "label": "Gallery",
      "command": "insertGallery",
      "icon": "gallery"
    }
  ],
  "configSchema": {
    "type": "object",
    "properties": {
      "columns": {
        "type": "number",
        "default": 3,
        "minimum": 1,
        "maximum": 6
      }
    }
  },
  "endpoints": [
    { "path": "/galleries", "method": "GET", "handler": "listGalleries" },
    { "path": "/galleries/{id}", "method": "GET", "handler": "getGallery" }
  ],
  "rendererHooks": {
    "beforeConversion": true,
    "afterConversion": true
  },
  "permissions": {
    "dataAccess": true,
    "assetAccess": true
  }
}
